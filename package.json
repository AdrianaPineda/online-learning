{
    "name": "webpack-course",
    "version": "1.0.0",
    "description": "WP es un Module Bundler for Modern JS Applications, es decir un empaquetador de m√≥dulos para el desarrollo de aplicaciones modernas en JavaScript.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "webpack --entry ./index.js --output ./bundle.js --mode development",
        "build:local": "webpack --mode production",
        "build:external": "webpack --config ./external/webpack.config.js",
        "build:multi": "webpack --config ./multi-entry-point/webpack.config.js",
        "build:css": "webpack --config ./css-style-loader/webpack.config.js",
        "build:plugins": "webpack --config ./plugins/webpack.config.js",
        "build:devNoLocalhost": "webpack --config ./webpack-dev-server/webpack.config.js",
        "build:devserver": "webpack-dev-server --config ./webpack-dev-server/webpack.config.js",
        "build:babel": "webpack-dev-server --config ./babel/webpack.config.js",
        "build:babelNoWebServer": "webpack --config ./babel/webpack.config.js",
        "build:react": "webpack-dev-server --config ./react/webpack.config.js",
        "build:reactv2": "webpack-dev-server --config ./react-v2/webpack.config.js",
        "build:url-loader": "webpack-dev-server --config ./url-loader/webpack.config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AdrianaPineda/platzi-webpack.git"
    },
    "keywords": [
        "webpack"
    ],
    "author": "AdrianaPineda",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AdrianaPineda/platzi-webpack/issues"
    },
    "homepage": "https://github.com/AdrianaPineda/platzi-webpack#readme",
    "dependencies": {
        "@babel/runtime": "^7.6.0",
        "react": "^16.9.0",
        "react-dom": "^16.9.0"
    },
    "devDependencies": {
        "@babel/core": "^7.6.0",
        "@babel/plugin-transform-runtime": "^7.6.0",
        "@babel/preset-env": "^7.6.0",
        "@babel/preset-react": "^7.0.0",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.8.0",
        "style-loader": "^1.0.0",
        "url-loader": "^2.1.0",
        "webpack": "^4.39.3",
        "webpack-cli": "^3.3.7",
        "webpack-dev-server": "^3.8.0"
    }
